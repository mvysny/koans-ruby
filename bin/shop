#!/usr/bin/env ruby
# frozen_string_literal: true

# Add lib/ to the load path
$LOAD_PATH.unshift File.expand_path('../lib', __dir__)

require 'bundler/setup'
require_relative '../lib/4_3_filter_map'
require 'pastel'

pastel = Pastel.new
puts "#{pastel.cyan.bold('Cities')} from all #{pastel.red.bold('shops')}"
SHOPS.each { puts "#{pastel.red(it.name)}: #{it.customer_cities.map { pastel.cyan(it.name) }.uniq.join ', '}" }
